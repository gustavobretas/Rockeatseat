{
    "openapi": "3.0.0",
    "info": {
        "title": "Introduction to S.O.L.I.D",
        "description": "This is an API documentation for a progran that I made to learn about S.O.L.I.D principles.",
        "version": "1.0.0",
        "contact": {
            "name": "SOLID",
            "email": ""
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": [
                    "Users"
                ],
                "sumary": "Create a new User",
                "description": "Create a new User",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "John Doe",
                                    "email": "john.doe@example.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Success!"
                    },
                    "400": {
                        "description": "User Already Exists!"
                    }
                }
            },
            "get": {
                "tags": [
                    "Users"
                ],
                "sumary": "List all Users",
                "description": "List all Users",
                "headers": {
                    "name": "user_id",
                    "schema": {
                        "type": "string",
                        "format": "uuid"
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success!",
                        "content": { 
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "id": {
                                                "type": "uuid"
                                            },
                                            "name": {
                                                "type": "string"
                                            },
                                            "admin": {
                                                "type": "boolean"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "created_at": {
                                                "type": "timestamp"
                                            },
                                            "updated_at": {
                                                "type": "timestamp"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Access Denied!"
                    }
                }
            }
        }
    }
}